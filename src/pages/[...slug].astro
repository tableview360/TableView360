---
import '../styles/global.css';
import App from '../App';
import SpeedInsights from '@vercel/speed-insights/astro';

export function getStaticPaths() {
  return [
    { params: { slug: 'login' } },
    { params: { slug: 'register' } },
    { params: { slug: 'settings' } },
    { params: { slug: 'demo' } },
    { params: { slug: 'productos' } },
    { params: { slug: 'nosotros' } },
    { params: { slug: 'contacto' } },
    { params: { slug: 'forgot-password' } },
  ];
}
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>TableView360</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body
    class="font-['Inter',_-apple-system,_BlinkMacSystemFont,_'Segoe_UI',_Roboto,_sans-serif] min-h-screen bg-[linear-gradient(135deg,#0f172a_0%,#1e293b_50%,#0f172a_100%)] text-slate-50 selection:bg-violet-500/30 leading-relaxed selection:text-white"
  >
    <SpeedInsights />
    <App client:only="react" />
  </body>
</html>
